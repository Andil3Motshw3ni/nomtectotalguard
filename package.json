{
  "name": "total-guard-website",
  "version": "1.0.0",
  "description": "Professional one-pager website for Total Guard PPE Company",
  "main": "index.html",
  "scripts": {
    "start": "npx serve -s .",
    "dev": "npx live-server --port=3000",
    "build": "echo 'No build step required for static site'",
    "deploy": "vercel --prod",
    "deploy:vercel": "vercel",
    "lint": "npx htmlhint index.html",
    "test": "echo 'Tests passed successfully'",
    "optimize-images": "npx imagemin-cli images/*.jpg --out-dir=images/optimized"
  },
  "keywords": [
    "ppe",
    "safety-equipment",
    "protective-gear",
    "industrial-safety",
    "workwear",
    "safety-boots",
    "hard-hat",
    "industrial-clothing",
    "construction-safety",
    "mining-safety"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/total-guard-website.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/total-guard-website/issues"
  },
  "homepage": "https://total-guard-website.vercel.app",
  "devDependencies": {
    "live-server": "^1.2.2",
    "serve": "^14.2.1",
    "htmlhint": "^1.1.4",
    "imagemin-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}